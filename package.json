{
  "name": "social-media-app",
  "version": "2.0.0",
  "description": "Social Media Application API - Node.js Backend",
  "main": "app.js",
  "type": "commonjs",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "node --watch app.js",
    "lint": "eslint . --config config/eslint.config.mjs",
    "lint:fix": "eslint . --fix --config config/eslint.config.mjs",
    "prettier:check": "prettier --check . --config config/.prettierrc --ignore-path config/.prettierignore",
    "prettier:fix": "prettier --write . --config config/.prettierrc --ignore-path config/.prettierignore",
    "audit": "npm run lint && npm run prettier:check",
    "audit:fix": "npm run lint:fix && npm run prettier:fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "db:migrate:status": "npx sequelize-cli db:migrate:status",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:reset": "npm run db:migrate:undo:all && npm run db:migrate && npm run db:seed"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "social-media",
    "nodejs",
    "express",
    "api",
    "node24"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "eb-butler-utils": "^1.0.11",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.11.5",
    "nodemailer": "^6.9.16",
    "sequelize": "^6.37.5",
    "stripe": "^18.3.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "sequelize-cli": "^6.6.3"
  }
}